<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_dish_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:fontFamily="@font/lato_bold"
        android:padding="16dp"
        android:text="textView_dish_name"
        android:textAlignment="center"
        android:textColor="@color/schriftfarbe"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/button_addOneDish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/button_addOneDish"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/button_service_send"
        android:gravity="center"
        android:scaleType="center"
        app:layout_constraintEnd_toStartOf="@+id/button_removeOneDish"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_plus_black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_removeOneDish"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_service_payment"
        android:gravity="center"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_minus" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>